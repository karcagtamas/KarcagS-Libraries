<MudPaper Class="lib-action-bar p-2 mb-3" Elevation="2">
    <div class="box">
        @ChildContent
    </div>
    <div class="d-flex flex-column w-100">
        @OtherRows
    </div>
</MudPaper>

@code {
    [Parameter, EditorRequired]
    public required RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment? OtherRows { get; set; }
}
