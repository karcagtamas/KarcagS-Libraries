@using KarcagS.Client.Common.Services.Interfaces
@using KarcagS.Shared.Localization
@inject ILocalizationService LocalizationService

<MudDialog>
    <TitleContent>
        <DialogTitle Title="@Dialog.Title"/>
    </TitleContent>
    <DialogContent>
        <MudText Style="@($"min-width: {Input.MinContentWidth}px;")">
            @LocalizationService.GetValue(Input.Message)
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@GetCancelText()</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">@GetConfirmText()</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    private MudDialogInstance Dialog { get; set; } = default!;

    /// <summary>
    /// Dialog Input
    /// </summary>
    [Parameter]
    public ConfirmDialogInput Input { get; set; } = default!;

    private async Task Submit()
    {
        if (ObjectHelper.IsNull(Input.ActionFunction) || await Input.ActionFunction())
        {
            Dialog.Close(DialogResult.Ok(true));
        }
    }

    private string GetCancelText() => Input.IsYesNo
        ? LocalizationService.GetValue(LibraryLocalizer.ConfirmNoKey, "No")
        : LocalizationService.GetValue(LibraryLocalizer.ConfirmCancelKey, "Cancel");

    private string GetConfirmText() => Input.IsYesNo
        ? LocalizationService.GetValue(LibraryLocalizer.ConfirmYesKey, "Yes")
        : LocalizationService.GetValue(LibraryLocalizer.ConfirmConfirmKey, "Confirm");

    private void Cancel() => Dialog.Cancel();
}