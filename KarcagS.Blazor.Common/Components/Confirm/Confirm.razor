@using KarcagS.Blazor.Common.Services
@using KarcagS.Blazor.Common.Services.Interfaces
@using KarcagS.Shared.Localization
@inject ILocalizationService LocalizationService

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5" Color="Color.Primary">@Dialog.Title</MudText>
    </TitleContent>
    <DialogContent>
        @Input.FormattedMessage(LocalizationService)
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">@LocalizationService.GetValue(LibraryLocalizer.ConfirmCancelKey, "Cancel")</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">@LocalizationService.GetValue(LibraryLocalizer.ConfirmConfirmKey, "Confirm")</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private MudDialogInstance Dialog { get; set; } = null!;

    /// <summary>
    /// Dialog Input
    /// </summary>
    [Parameter]
    public ConfirmDialogInput Input { get; set; } = null!;

    private async void Submit()
    {
        if (await Input.ActionFunction())
        {
            Dialog.Close(DialogResult.Ok(true));
        }
    }

    private void Cancel()
    {
        Dialog.Cancel();
    }
}