<MudText Style="@($"margin-right: {(CloseButtonSpacing ? 38 : 0)}px;")" Typo="Typo.h5" Color="Color">@Title</MudText>

@code {

    [Parameter, EditorRequired]
    public string Title { get; set; } = default!;

    [Parameter]
    public Color Color { get; set; } = Color.Primary;

    [Parameter]
    public bool CloseButtonSpacing { get; set; } = true;

}