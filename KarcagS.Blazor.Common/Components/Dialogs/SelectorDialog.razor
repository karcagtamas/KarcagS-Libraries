@using KarcagS.Client.Common.Services.Interfaces
@using KarcagS.Shared.Common
@using KarcagS.Shared.Helpers
@using KarcagS.Shared.Localization
@typeparam Key
@typeparam Data where Data : IIdentified<Key>

<MudDialog>
    <TitleContent>
        <DialogTitle Title="@TitleText"/>
    </TitleContent>
    <DialogContent>
        @if (ObjectHelper.IsNotNull(BodyText))
        {
            <MudText Class="mb-2" Typo="Typo.body1">@BodyText</MudText>
        }
        <LoadingBox IsLoading="IsLoading">
            <MudTable Style="margin-top: 2rem;" T="SelectableRowItem<Data, Key>" Items="DataList" Dense="true" Striped="true" OnRowClick="e => ToggleSelect(e.Item)" RowClassFunc="RowClassFunc">
                <HeaderContent>
                    <MudTh>
                        <MudText Color="Color.Primary">@LocalizationService.GetValue(LibraryLocalizer.SelectorValuesColumnHeaderKey, "Values")</MudText>
                    </MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="Value">@TitleGetter(context.Data)</MudTd>
                </RowTemplate>
            </MudTable>
        </LoadingBox>
    </DialogContent>
    <DialogActions>
        <MudSpacer/>
        <MudButton OnClick="Cancel">@LocalizationService.GetValue(LibraryLocalizer.SelectorCancelActionKey, "Cancel")</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@(!CanSubmit())">@LocalizationService.GetValue(LibraryLocalizer.SelectorSelectActionKey, "Select")</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    private MudDialogInstance Dialog { get; set; } = null!;

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? BodyText { get; set; }

    [Parameter, EditorRequired]
    public string EntityName { get; set; } = default!;

    [Parameter, EditorRequired]
    public Func<Task<List<Data>>> Fetcher { get; set; } = async () => await Task.FromResult<List<Data>>(new());

    [Parameter, EditorRequired]
    public Func<Data, string> TitleGetter { get; set; } = _ => "";

    [Parameter]
    public bool MultiSelect { get; set; }

    [Parameter]
    public bool Required { get; set; }

    [Parameter]
    public Key? PreSelectedId { get; set; }

    [Parameter]
    public List<Key> PreSelectedIds { get; set; } = new();

    [Inject]
    private ILocalizationService LocalizationService { get; set; } = default!;

    private string TitleText { get; set; } = "";
    public List<SelectableRowItem<Data, Key>> DataList { get; set; } = new();
    private List<Data> Selection { get; set; } = new();

    private bool IsLoading { get; set; }

    protected override async Task OnInitializedAsync()
    {
        TitleText = ObjectHelper.IsNotNull(Title) ? Title : LocalizationService.GetValue(LibraryLocalizer.SelectorSelectEntityKey, "Select {0}", EntityName);

        await Fetch();

        await base.OnInitializedAsync();
    }

    private async Task Fetch()
    {
        IsLoading = true;
        await InvokeAsync(StateHasChanged);

        DataList = (await Fetcher()).Select(x => new SelectableRowItem<Data, Key> { Data = x }).ToList();

        if (MultiSelect)
        {
            var items = DataList.Where(x => PreSelectedIds.Contains(x.Data.Id)).ToList();

            items.ForEach(i =>
            {
                i.Selected = true;
                Selection.Add(i.Data);
            });
        }
        else
        {
            ObjectHelper.WhenNotNull(PreSelectedId, pId =>
            {
                var item = DataList.FirstOrDefault(x => pId != null && pId.Equals(x.Data.Id));

                ObjectHelper.WhenNotNull(item, i =>
                {
                    i.Selected = true;
                    Selection.Add(i.Data);
                });
            });
        }

        IsLoading = false;
        await InvokeAsync(StateHasChanged);
    }

    private void ToggleSelect(SelectableRowItem<Data, Key> item)
    {
        if (MultiSelect)
        {
            if (item.Selected)
            {
                item.Selected = false;
                Selection.Remove(item.Data);
            }
            else
            {
                item.Selected = true;
                Selection.Add(item.Data);
            }
        }
        else
        {
            if (item.Selected)
            {
                item.Selected = false;
                Selection = new();
            }
            else
            {
                DataList.ForEach(x => x.Selected = false);
                item.Selected = true;
                Selection = new List<Data> { item.Data };
            }
        }
    }

    private bool HasSelection() => ObjectHelper.IsNotEmpty(Selection);

    private void Submit()
    {
        if (!CanSubmit())
        {
            return;
        }

        Dialog.Close(DialogResult.Ok(Selection));
    }

    private void Cancel()
    {
        Dialog.Cancel();
    }

    private bool CanSubmit() => !Required || HasSelection();

    private string RowClassFunc(SelectableRowItem<Data, Key> item, int index) => item.Selected ? "mud-info" : "";
}