@using KarcagS.Client.Common.Services.Interfaces
@using KarcagS.Shared.Common
@using KarcagS.Shared.Helpers
@using KarcagS.Shared.Localization

@typeparam TKey
@typeparam T where T : IIdentified<TKey>


<MudDialog>
    <TitleContent>
        <DialogTitle Title="@TitleText"/>
    </TitleContent>
    <DialogContent>
        <div style="min-width: @(MinWidth)px;">
            @if (ObjectHelper.IsNotNull(BodyText))
            {
                <MudText Class="mb-2" Typo="Typo.body1">@BodyText</MudText>
            }
            <MudTreeView Items="DataList">
                <ItemTemplate>
                    <MudTreeViewItem @bind-Expanded="context.IsExpanded" Items="context.Items">
                        <Content>
                            <MudTreeViewItemToggleButton @bind-Expanded="context.IsExpanded" Visible="context.HasChild"/>
                            <MudCheckBox Checked="context.IsSelected" CheckedChanged="(bool val) => ToggleSelect(context, val)" Disabled="IsSelectDisabled(context)"/>
                            <MudText Class="mr-1">@TitleGetter(context.Data)</MudText>
                        </Content>
                    </MudTreeViewItem>
                </ItemTemplate>
            </MudTreeView>
        </div>
    </DialogContent>
    <DialogActions>
        <MudIconButton Icon="@Icons.Material.Filled.ExpandMore" Size="Size.Small" OnClick="ExpandAll"/>
        <MudIconButton Icon="@Icons.Material.Filled.ExpandLess" Size="Size.Small" OnClick="CollapseAll"/>
        <MudSpacer/>
        <MudButton OnClick="Cancel">@LocalizationService.GetValue(LibraryLocalizer.SelectorCancelActionKey, "Cancel")</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">@LocalizationService.GetValue(LibraryLocalizer.SelectorSelectActionKey, "Select")</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter]
    private MudDialogInstance Dialog { get; set; } = null!;

    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public string? BodyText { get; set; }

    [Parameter, EditorRequired]
    public string EntityName { get; set; } = default!;

    [Parameter, EditorRequired]
    public Func<Task<List<T>>> Fetcher { get; set; } = async () => await Task.FromResult<List<T>>(new());

    [Parameter, EditorRequired]
    public Func<T, List<T>> ItemExtractor { get; set; } = _ => new();

    [Parameter, EditorRequired]
    public Func<T, string> TitleGetter { get; set; } = _ => "";

    [Parameter]
    public bool MultiSelect { get; set; }

    [Parameter]
    public bool SingleItemSelect { get; set; } = true;

    [Parameter]
    public bool Required { get; set; }

    [Parameter]
    public int MinWidth { get; set; } = 300;

    [Parameter]
    public List<TKey> DisabledIds { get; set; } = new();

    [Inject]
    private ILocalizationService LocalizationService { get; set; } = default!;

    public HashSet<TreeItem<T>> DataList { get; set; } = new();

    private List<T> Selection { get; } = new();
    private string TitleText { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        TitleText = ObjectHelper.IsNotNull(Title) ? Title : LocalizationService.GetValue(LibraryLocalizer.SelectorSelectEntityKey, "Select {0}", EntityName);

        await Fetch();

        await base.OnInitializedAsync();
    }

    private async Task Fetch()
    {
        DataList = TreeItem<T>.ConvertList(await Fetcher(), ItemExtractor, false);
        await InvokeAsync(StateHasChanged);
    }

    private void ExpandAll()
    {
        DataList.ToList().ForEach(x => x.ExpandAll());
    }

    private void CollapseAll()
    {
        DataList.ToList().ForEach(x => x.CollapseAll());
    }

    private void ToggleSelect(TreeItem<T> item, bool val)
    {
        item.ToggleSelection(!SingleItemSelect);

        if (SingleItemSelect)
        {
            if (val)
            {
                Selection.Add(item.Data);
            }
            else
            {
                Selection.Remove(item.Data);
            }
        }
    }

    private bool HasSelection()
    {
        return ObjectHelper.IsNotEmpty(Selection);
    }

    private bool IsSelectDisabled(TreeItem<T> item)
    {
        return (!MultiSelect && HasSelection() && !Selection.Contains(item.Data)) || DisabledIds.Contains(item.Data.Id);
    }

    private void Submit()
    {
        if (Required && !HasSelection())
        {
            return;
        }

        Dialog.Close(DialogResult.Ok(Selection));
    }

    private void Cancel() => Dialog.Cancel();

}