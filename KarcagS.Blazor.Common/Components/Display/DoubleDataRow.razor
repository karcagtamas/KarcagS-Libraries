<DataRow Title="@Title" Value="@Number.ToString($"N{DecimalPlaces}")" OneRow="OneRow" Ellipsis="Ellipsis"/>

@code {

    [Parameter, EditorRequired]
    public required string Title { get; set; } = null!;

    [Parameter, EditorRequired]
    public required double Number { get; set; }

    [Parameter]
    public bool OneRow { get; set; }

    [Parameter]
    public int DecimalPlaces { get; set; } = 2;
    
    [Parameter]
    public bool Ellipsis { get; set; } = true;

}