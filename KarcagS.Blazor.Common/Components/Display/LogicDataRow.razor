<DataRow Title="@Title" Value="@(Value ? TrueValue : FalseValue)" OneRow="OneRow" ValueColor="@(Value ? TrueColor : FalseColor)" Ellipsis="Ellipsis" />

@code {
    [Parameter, EditorRequired]
    public required string Title { get; set; } = null!;

    [Parameter, EditorRequired]
    public required bool Value { get; set; }

    [Parameter, EditorRequired]
    public required string TrueValue { get; set; } = "";

    [Parameter, EditorRequired]
    public required string FalseValue { get; set; } = "";

    [Parameter]
    public Color TrueColor { get; set; } = Color.Default;

    [Parameter]
    public Color FalseColor { get; set; } = Color.Default;

    [Parameter]
    public bool OneRow { get; set; }
    
    [Parameter]
    public bool Ellipsis { get; set; } = true;
}