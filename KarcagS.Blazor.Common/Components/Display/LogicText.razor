@if (LogicValue)
{
    <MudText Color="@(Colorize ? Color.Success : Color.Default)">@TrueText</MudText>
}
else
{
    <MudText Color="@(Colorize ? Color.Error : Color.Default)">@FalseText</MudText>
}

@code {
    [Parameter, EditorRequired]
    public required bool LogicValue { get; set; }

    [Parameter, EditorRequired]
    public required string TrueText { get; set; } = null!;

    [Parameter, EditorRequired]
    public required string FalseText { get; set; } = null!;

    [Parameter]
    public bool Colorize { get; set; }
}
