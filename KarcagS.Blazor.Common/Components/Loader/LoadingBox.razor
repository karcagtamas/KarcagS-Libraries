@if (IsLoading)
{
    <Loader Color="Color"/>
}
else
{
    @ChildContent
}

@code {

    [Parameter, EditorRequired]
    public bool IsLoading { get; set; }

    [Parameter]
    public Color Color { get; set; }

    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; } = default!;

}